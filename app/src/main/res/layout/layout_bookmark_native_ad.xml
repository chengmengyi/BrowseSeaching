<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="68dp">
    <com.google.android.gms.ads.nativead.NativeAdView
        android:id="@+id/view_native_ad"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:visibility="gone">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="20dp"
                android:layout_height="11dp"
                android:src="@drawable/tag2"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"/>
            <androidx.constraintlayout.utils.widget.ImageFilterView
                android:id="@+id/iv_ad_logo"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:round="4dp"
                android:layout_marginLeft="12dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_ad_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:singleLine="true"
                android:ellipsize="end"
                android:textColor="#333333"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                app:layout_constraintTop_toTopOf="@id/iv_ad_logo"
                app:layout_constraintLeft_toRightOf="@id/iv_ad_logo"
                app:layout_constraintRight_toLeftOf="@id/tv_ad_install"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_ad_desc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:ellipsize="end"
                android:textSize="12sp"
                android:layout_marginTop="6dp"
                android:textColor="#80333333"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                app:layout_constraintLeft_toRightOf="@id/iv_ad_logo"
                app:layout_constraintTop_toBottomOf="@id/tv_ad_title"
                app:layout_constraintRight_toLeftOf="@id/tv_ad_install"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_ad_install"
                android:layout_width="74dp"
                android:layout_height="32dp"
                android:textSize="14sp"
                android:text="Install"
                android:gravity="center"
                android:layout_marginRight="12dp"
                android:textColor="@color/white"
                android:background="@drawable/bg_f6840f_8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.gms.ads.nativead.NativeAdView>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_default"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/cover1"
        android:scaleType="fitXY"/>
</RelativeLayout>